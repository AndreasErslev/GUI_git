@model IEnumerable<GuiEksamenDel2.Models.Session>

@{
    ViewData["Title"] = "Index";
}

<h1>Choose Settings</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BPM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dato)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BPM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dato)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SessionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SessionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SessionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
