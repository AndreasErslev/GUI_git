@model GuiEksamenDel2.Models.Session

@{
    ViewData["Title"] = "Create";
}

<h1>Session</h1>

<h4>Settings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BPM" class="control-label">Breaths per minut</label>
                <input id="Frequency" type="number" asp-for="BPM" class="form-control" min="5" max="7" />
                <span asp-validation-for="BPM" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SessionLength" class="control-label"></label>
                <input id="Time" type="number" asp-for="SessionLength" class="form-control" min="1" max="20" />
                <span asp-validation-for="SessionLength" class="text-danger"></span>
            </div>

            <div class="form-group">
                    <input id="CreationID" type="submit" value="Save" class="btn btn-primary" />
                    <input type="button" name="cancel" value="Home" onClick="window.location='/Home';" class="btn btn-primary" />
                    <input type="button" name="Index" value="Index" onClick="window.location='Index';" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>
<button class="btn btn-primary" onclick="startInterval()">Start Session</button>

<div>
    <script>
        document.getElementById('Breath');
    </script>
    <h1 class="Header1" id="Breath">Test</h1>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/breath.js" asp-append-version="true"></script>
}
