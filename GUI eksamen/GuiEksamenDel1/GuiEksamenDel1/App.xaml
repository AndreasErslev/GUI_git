<Application x:Class="GuiEksamenDel1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GuiEksamenDel1"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!--TopMarginToGrid-->
        <Style x:Key="GridConrainter" TargetType="{x:Type Grid}">
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <!-- Resource for Labels Layout -->
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="FontFamily" Value="Britannic Bold"></Setter>
        </Style>

        <!--Resource for buttons layour -->
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#2DFFFF"></Setter>
            <Setter Property="Foreground" Value="#000000"></Setter>
            <Setter Property="BorderThickness" Value="2"></Setter>
        </Style>

        <!--Resource for Textboxes layour -->
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="#FC976D"></Setter>
            <Setter Property="Foreground" Value="#FFFFFF"></Setter>
            <Setter Property="BorderThickness" Value="2"></Setter>
        </Style>
    </Application.Resources>
</Application>
